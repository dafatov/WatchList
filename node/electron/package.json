{
  "name": "ru.demetrious.watch-list.electron",
  "version": "1.0.0",
  "description": "A local browser to only one url",
  "type": "commonjs",
  "private": true,
  "build": {
    "appId": "ru.demetrious.watch-list.electron",
    "artifactName": "WatchList.${ext}",
    "productName": "WatchList",
    "win": {
      "target": "nsis",
      "icon": "../../resources/icons/watch-list.png",
      "extraFiles": [
        {
          "from": "../../target/WatchList-spring-boot.jar",
          "to": "./server/server.jar"
        }
      ],
      "extraResources": [
        {
          "from": "../../resources/icons/watch-list.png",
          "to": "./icons/watch-list.png"
        }
      ]
    },
    "nsis": {
      "oneClick": false,
      "perMachine": false,
      "allowToChangeInstallationDirectory": true,
      "deleteAppDataOnUninstall": true
    }
  },
  "scripts": {
    "start": "electron .",
    "package": "electron-builder"
  },
  "author": "DemetriouS",
  "license": "MIT",
  "devDependencies": {
    "electron": "25.3.1",
    "electron-builder": "24.6.3"
  },
  "engines": {
    "node": "16.13.0"
  },
  "dependencies": {
    "tree-kill": "1.2.2"
  }
}
